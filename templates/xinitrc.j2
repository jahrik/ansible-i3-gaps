#!/bin/sh

if [ -d /etc/X11/xinit/xinitrc.d ]; then
  for f in /etc/X11/xinit/xinitrc.d/*; do
    [ -x "$f" ] && . "$f"
  done
  unset f
fi

export I3_CONFIG_DIR="$(dirname $(readlink -f $0))"

export PATH="$PATH:$I3_CONFIG_DIR/bin:$HOME/bin"

{% if i3.terminal == 'rxvt' %}
# use urxvt xresources
xrdb -merge ~/.urxvt/xresources

# terminal server
urxvtd &

{% endif %}
# color temperature adjustment, set for Boise
# redshift -l 42.56:114.46 -m randr -t 5500:5000 -g 0.75:0.75:0.75 -b 1.0:0.9 &

# notification
dunst -config ~/.config/i3/dunstrc &

# disks automounting
# udiskie &

# turn off beep
xset -b

# set background
feh --bg-scale ~/.config/i3/background.jpg

# gpg agent
export SSH_AUTH_SOCK="$(gpgconf --list-dirs agent-ssh-socket)"
gpg-connect-agent updatestartuptty /bye

# ssh-agent
export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"

i3

true
